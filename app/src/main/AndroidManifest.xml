<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mowerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.menu.events.FixedModeActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".ui.menu.events.ReelSpeedLowActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.menu.events.ReelSpeedActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.menu.events.ReelModeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.menu.events.MowerSetupActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.PasswordActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.HomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>